{
    "manifest_version": 3,
    "name": "Currency to MMK Converter",
    "version": "0.1",
    "description": "Convert all displayed currencies on webpages to Burmese Kyat (MMK).",
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}